{
  "name": "qr-super-generator-vite",
  "version": "1.0.0",
  "description": "Premium QR code generator Chrome extension with comprehensive debugging capabilities, modern glassmorphism UI, and professional development practices.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnBra/vite-web-extension.git"
  },
  "scripts": {
    "build": "vite build --config vite.config.chrome.ts",
    "build:chrome": "vite build --config vite.config.chrome.ts",
    "build:chrome:prod": "webpack --config webpack.prod.js",
    "build:firefox": "vite build --config vite.config.firefox.ts",
    "dev": "nodemon --config nodemon.chrome.json",
    "dev:chrome": "nodemon --config nodemon.chrome.json",
    "dev:firefox": "nodemon --config nodemon.firefox.json",
    "test": "echo 'Manual testing - see TESTING_GUIDE.md for comprehensive test procedures'",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "clean": "rm -rf dist_chrome dist_firefox",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build complete! Load dist_chrome folder in Chrome extensions page.'"
  },
  "type": "module",
  "dependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/qrcode": "^1.5.5",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.525.0",
    "qrcode": "^1.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.3",
    "@tailwindcss/vite": "^4.1.11",
    "@types/chrome": "^0.1.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.6.0",
    "compression-webpack-plugin": "^11.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^8.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fs-extra": "^11.3.0",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4.1.8",
    "postcss": "^8.4.47",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.11",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "webpack": "^5.96.1",
    "webpack-bundle-analyzer": "^4.11.0",
    "webpack-cli": "^5.1.5"
  }
}
